{
  "name": "@lucasforster/ts-monorepo",
  "author": "Lucas Forster <mail@lucasforster.com>",
  "homepage": "https://github.com/lucasforster/ts-monorepo",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "predevelop": "tsc",
    "develop": "NODE_ENV=development concurrently --kill-others 'npm:watch' 'npm:serve' 'npm:demon'",
    "watch": "tsc -w --preserveWatchOutput",
    "serve": "cd frontend; webpack serve",
    "demon": "nodemon dist/backend",
    "prebuild": "rm -rf build dist; tsc",
    "build": "cd frontend; NODE_ENV=production webpack"
  },
  "dependencies": {
    "@types/node": "^18.0.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "concurrently": "^7.2.2",
    "favicons": "^6.2.2",
    "favicons-webpack-plugin": "^5.0.2",
    "html-webpack-plugin": "^5.5.0",
    "nodemon": "^2.0.19",
    "typescript": "^4.7.4",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.9.3"
  }
}
